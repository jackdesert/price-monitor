<table>
    <tr>
        <th>Num Readings</th>
        <th>Name</th>
        <th>Size</th>
        <th>Mean Price</th>
        <th>Std Dev Price</th>
        <th>Min Price</th>
        <th>Max Price</th>
        <th>Current Price</th>
    </tr>
    {% for tire in tires %}
        <tr>
            <td>{{ tire.num_readings }}</td>
            <td><a href='{{ base_url }}/{{ tire.path }}'>{{ tire.name }}</a></td>
            <td>{{ tire.size }}</td>
            <td>{{ tire.mean    | round(2) }}</td>
            <td>
                {% if tire.std is defined %}
                    {{ tire.std     | round(2) }}
                {% endif %}
            </td>
            <td>{{ tire.min     | round | int }}</td>
            <td>{{ tire.max     | round | int}}</td>
            <td>{{ tire.current | round | int}}</td>
        </tr>
    {% endfor %}
</table>
